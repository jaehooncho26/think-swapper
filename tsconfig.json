{
  // npm i -D @types/node
  "compilerOptions": {
    // File Layout
    // "rootDir": "./src",
    "outDir": "dist",

    // Environment / Module
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "types": ["node"],

    // Interop (fixes default import warnings, e.g., BigNumber)
    "esModuleInterop": true,

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": false, // <-- allow ESM-style imports in CJS projects
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  }
}
